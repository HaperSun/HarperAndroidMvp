<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp44"
    tools:parentTag="android.widget.RelativeLayout">

    <FrameLayout
        android:id="@+id/v_left"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp18"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp21">

        <ImageView
            android:layout_width="@dimen/dp11"
            android:layout_height="@dimen/dp18"
            android:src="@mipmap/icon_back" />
    </FrameLayout>

    <com.sun.base.ui.widget.MarqueeTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp44"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp90"
        android:layout_marginRight="@dimen/dp15"
        android:gravity="center"
        android:textColor="@color/color_1d1b1b"
        android:textSize="@dimen/sp16"
        android:textStyle="bold"
        tools:text="测试头部布局" />

    <ImageView
        android:id="@+id/v_right"
        android:layout_width="@dimen/dp19"
        android:layout_height="@dimen/dp18"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp21" />
</merge>