<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_270"
    android:layout_height="@dimen/dimen_222"
    android:background="@drawable/dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="@dimen/dimen_66"
        android:layout_height="@dimen/dimen_66"
        android:src="@mipmap/dialog_loading_img" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_31"
        android:layout_marginEnd="@dimen/dimen_10"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_28"
        tools:text="hh" />
</LinearLayout>