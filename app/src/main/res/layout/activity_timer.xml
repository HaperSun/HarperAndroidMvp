<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".activity.TimerActivity">

        <com.sun.base.widget.LeftIconHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cl_FFBB86FC"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:text="计时器1"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_ses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cl_FFBB86FC"
            android:layout_marginTop="@dimen/dp10"
            android:padding="@dimen/dp10"
            android:text="计时器2"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />
        
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp30"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp10"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@drawable/selector_good_check"
                android:checked="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/start"
                android:textColor="@drawable/selector_tv_color"/>

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:button="@drawable/selector_no_good_check"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/end"
                android:textColor="@drawable/selector_tv_color"/>
        </RadioGroup>

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="@dimen/dp120"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:button="@drawable/selector_ic_check"
            android:checked="false"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/save_to_album"
            android:textColor="@drawable/selector_tv_color"
            android:textSize="@dimen/sp16" />
    </LinearLayout>
</layout>