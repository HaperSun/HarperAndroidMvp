<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/lucky_lights_one" />

    <ImageView
        android:id="@+id/bg_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/lucky_lights_two"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize1"
                app:prizeName="@string/iphone_8" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize6"
                app:prizeName="@string/iqiyi_month_card" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize3"
                app:prizeName="@string/lucky_bead" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize5"
                app:prizeName="@string/baofeng_vr_glasses" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize6"
                app:prizeName="@string/iqiyi_month_card" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize6"
                app:prizeName="@string/iqiyi_month_card" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize4"
                app:prizeName="@string/xiaomi_scales" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.sun.demo2.view.widget.LuckyMonkeyPanelItemView
                android:id="@+id/item9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:prizeImg="@mipmap/lucky_prize2"
                app:prizeName="@string/beats_headset" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>