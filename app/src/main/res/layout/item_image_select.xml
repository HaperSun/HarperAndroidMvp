<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/add_container"
            android:layout_width="@dimen/dp93"
            android:layout_height="@dimen/dp93"
            android:layout_marginLeft="@dimen/dp21"
            android:background="@drawable/shape_rec_solid_f6f7fa_radius_dp3"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp26"
                android:layout_height="@dimen/dp26"
                android:src="@mipmap/icon_add_pic" />

            <TextView
                android:id="@+id/tv_count_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp8"
                android:textColor="#ffc1ccd1"
                android:textSize="@dimen/sp12"
                android:visibility="gone"
                tools:text="继续 3/9" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/re_video_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            android:layout_marginRight="@dimen/dp21"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_video_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:maxHeight="@dimen/dp160" />

            <ImageView
                android:id="@+id/iv_video_del"
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:layout_alignParentRight="true"
                android:background="@mipmap/icon_delete_pic" />

            <ImageView
                android:id="@+id/iv_video_play"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp36"
                android:layout_centerInParent="true"
                android:background="@mipmap/icon_play_white" />
            <TextView
                android:id="@+id/tv_mongo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cl_60000000"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14"
                android:visibility="gone"
                tools:text="10%"
                tools:visibility="visible" />
        </RelativeLayout>

        <com.sun.media.img.ui.view.ChoosePictureWidget
            android:id="@+id/cpw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp21"
            android:layout_marginRight="@dimen/dp21" />

        <com.sun.common.widget.FlowLayout
            android:id="@+id/sign_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp15" />
    </LinearLayout>
</layout>
