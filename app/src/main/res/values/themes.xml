<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Demo02" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cl_FF6200EE</item>
        <item name="colorPrimaryVariant">@color/cl_FF3700B3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cl_FF03DAC5</item>
        <item name="colorSecondaryVariant">@color/cl_FF018786</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置StatusBar颜色. -->
        <item name="android:statusBarColor">@color/white</item>
        <!--表示内容区不延伸到状态栏或底部导航栏，该属性生效前提是：状态栏(StatusBar)或导航栏(NavigationBar)透明并且没有标题栏-->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/bg_splash</item>
    </style>

    <style name="CommonAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MusicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowAnimationStyle">@style/default_animation_down</item>
    </style>

    <!--只有上一页面退出时有动画-->
    <style name="default_animation_down" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation">@anim/activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_down_out</item>
    </style>
</resources>