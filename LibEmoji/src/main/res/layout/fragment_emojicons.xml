<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keyboard_background_holo">

    <LinearLayout
        android:id="@+id/emojis_tab"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/emojis_tab_0_recents"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_recent_light" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cl_8f8f8f" />

        <ImageButton
            android:id="@+id/emojis_tab_1_people"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_people_light" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cl_8f8f8f" />

        <ImageButton
            android:id="@+id/emojis_tab_2_nature"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_nature_light" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cl_8f8f8f" />

        <ImageButton
            android:id="@+id/emojis_tab_3_objects"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_objects_light" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cl_8f8f8f" />

        <ImageButton
            android:id="@+id/emojis_tab_4_cars"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_places_light" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cl_8f8f8f" />

        <ImageButton
            android:id="@+id/emojis_tab_5_punctuation"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/selector_emoji_symbols_light" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/cl_8f8f8f" />

        <ImageButton
            android:id="@+id/emojis_backspace"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/sym_keyboard_delete_holo_dark" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/emojis_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emojis_tab"
        android:layout_alignParentBottom="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/emojis_tab"
        android:background="@color/cl_8f8f8f" />
</RelativeLayout>
