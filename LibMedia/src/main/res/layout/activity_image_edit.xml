<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".activity.ImagePreActivity">

        <RelativeLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:layout_alignParentBottom="true"
            android:background="@color/cl_323232"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cropper"
                android:layout_width="@dimen/dp57"
                android:layout_height="@dimen/dp78"
                android:paddingStart="@dimen/dp18"
                android:paddingEnd="@dimen/dp18"
                android:src="@mipmap/icon_crop" />

            <TextView
                android:id="@+id/tv_actionBar_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp15"
                android:background="@drawable/shape_rec_solid_orange_radius_dp10"
                android:gravity="center"
                android:paddingLeft="@dimen/dp10"
                android:paddingTop="@dimen/dp5"
                android:paddingRight="@dimen/dp10"
                android:paddingBottom="@dimen/dp5"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_container"
            android:background="@color/cl_1C1C1C">

            <com.sun.media.img.ui.view.HackyViewPager
                android:id="@+id/vp_main_preImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</layout>
