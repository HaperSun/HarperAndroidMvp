<?xml version="1.0" encoding="utf-8"?>
<com.sun.media.img.ui.view.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp1">

    <com.sun.media.img.ui.view.SquareImageView
        android:id="@+id/iv_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:background="@mipmap/icon_image_default"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@+id/frame_checked"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp22"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp6"
        android:layout_marginRight="@dimen/dp6"
        tools:background="@drawable/shape_oval_write_4px">

        <TextView
            android:id="@+id/tv_checked"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14"
            tools:text="1" />
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_item_gif"
        android:layout_width="@dimen/dp22"
        android:layout_height="@dimen/dp22"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="6dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_gif"
        android:visibility="gone" />
</com.sun.media.img.ui.view.SquareRelativeLayout>