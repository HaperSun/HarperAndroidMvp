<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".QualityControlActivity">

        <RelativeLayout
            android:id="@+id/agreement_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/but_quality_return"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/setting_image_close_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting_quality_control_txt"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_below="@id/agreement_layout"
            android:background="#d8d8d8" />

        <!--宽松-->
        <RelativeLayout
            android:id="@+id/relative_low"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/setting_layout_top_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <RadioButton
                android:id="@+id/radio_low"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_radio"
                android:drawablePadding="10dp"
                android:text="@string/setting_quality_low_txt"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_low_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/icon_setting_quality_enter"
                android:text="@string/setting_quality_enter_params_txt"
                android:textColor="@color/cl_9EA0A3"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>

        <!--正常-->
        <RelativeLayout
            android:id="@+id/relative_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_low"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <RadioButton
                android:id="@+id/radio_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_radio"
                android:drawablePadding="10dp"
                android:text="@string/setting_quality_normal_txt"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_normal_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/icon_setting_quality_enter"
                android:text="@string/setting_quality_enter_params_txt"
                android:textColor="@color/cl_9EA0A3"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>

        <!--严格-->
        <RelativeLayout
            android:id="@+id/relative_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_normal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <RadioButton
                android:id="@+id/radio_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_radio"
                android:drawablePadding="10dp"
                android:text="@string/setting_quality_high_txt"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_high_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/icon_setting_quality_enter"
                android:text="@string/setting_quality_enter_params_txt"
                android:textColor="@color/cl_9EA0A3"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>

        <!--自定义-->
        <RelativeLayout
            android:id="@+id/relative_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_high"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/setting_layout_bottom_round"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <RadioButton
                android:id="@+id/radio_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_radio"
                android:drawablePadding="10dp"
                android:text="@string/setting_quality_custom_txt"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_custom_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/icon_setting_quality_enter"
                android:text="@string/setting_quality_enter_params_txt"
                android:textColor="@color/cl_9EA0A3"
                android:textSize="16sp"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_custom"
            android:layout_alignLeft="@id/relative_custom"
            android:layout_marginTop="24dp"
            android:text="@string/setting_quality_tip1_txt"
            android:textColor="@color/cl_9EA0A3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_tip1"
            android:layout_alignLeft="@id/relative_custom"
            android:layout_marginTop="8dp"
            android:text="@string/setting_quality_tip2_txt"
            android:textColor="@color/cl_9EA0A3"
            android:textSize="14sp" />
    </RelativeLayout>
</layout>
